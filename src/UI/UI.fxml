<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.paint.Color?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="UI.UIController" styleClass="root">
    <padding><Insets top="0" right="0" bottom="0" left="0"/></padding>

    <Accordion id="accorcontainer"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.vgrow="always"
               minWidth="270">
        <panes>
            <TitledPane text="Textures">
                <VBox>
                    <Button id="texture1" text="Button"
                            onAction="#changeTexture">
                    </Button>
                    <Button id="texture2" text="Button"
                            onAction="#changeTexture">
                    </Button>
                </VBox>
            </TitledPane>
            <TitledPane text="Images">
                <Text text="Load image files here."/>
            </TitledPane>
        </panes>



    </Accordion>

    <Pane fx:id="mapcontainer"
          GridPane.ColumnIndex="1"
          minHeight="720"
          minWidth="540">

    </Pane>

    <VBox id="rightpane"
          GridPane.columnIndex="2"
          GridPane.vgrow="ALWAYS"
          minWidth="270">

        <ListView fx:id="layerslist" onMouseClicked="#changeLayer">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Layer 0"/>
                </FXCollections>
            </items>
        </ListView>
        <HBox id="layerbuttons"
              GridPane.rowIndex="1">
            <Button id="addlayer" text="New Layer"
                    onAction="#addLayer">
            </Button>
            <Button id="shiftlayerup" text="↑"
                    onAction="#shiftLayerUp">
            </Button    >
            <Button id="shiftlayerdown" text="↓"
                    onAction="#shiftLayerDown">
            </Button>
            <Button id="deletelayer" text="Delete Layer"
                    onAction="#deleteLayer">
            </Button>
        </HBox>
        <ColorPicker  fx:id="colorPicker" onAction="#changeColor">
            <value>
                <Color/>
            </value>
        </ColorPicker>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Other">
                <Button text="Apply Clipping" onAction="#applyClipping"/>
            </Tab>
        </TabPane>

    </VBox>


    <stylesheets>
        <URL value="@UI.css" />
    </stylesheets>

</GridPane>
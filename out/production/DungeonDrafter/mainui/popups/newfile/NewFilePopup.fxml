<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="mainui.popups.newfile.NewFilePopup"
      prefHeight="500.0" prefWidth="150.0">

    <GridPane hgap="12" vgap="5" alignment="CENTER_LEFT">
        <padding><Insets top="10" left="20"/></padding>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Name:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" text="New Map" fx:id="mapNameTextField"/>

        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
            <Label text="Grid Size: "/>
            <TextField prefWidth="50" fx:id="gridSizeTextField" promptText="50" onKeyTyped="#updateGridLabel"/>
            <Label text=" x "/> <Label fx:id="mirrorGridLabel" text="50"/>
        </HBox>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Width:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" text="500" fx:id="widthTextField"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Height:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" text="500" fx:id="heightTextField"/>

    </GridPane>

    <HBox minWidth="100" alignment="CENTER">
        <Button fx:id="okButton" text="OK" onAction="#createNewFile"/>
    </HBox>

    <stylesheets>
        <URL value="@NewFilePopup.css" />
    </stylesheets>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="mainui.UIController" styleClass="root">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="New" onAction="#newMapFile"/>
            <MenuItem text="Open"/>
            <MenuItem text="Save"/>
            <MenuItem text="Save As"/>
            <SeparatorMenuItem/>
            <MenuItem text="Options"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
    </MenuBar>

    <HBox VBox.vgrow="ALWAYS">
        <padding><Insets top="0" right="0" bottom="0" left="0"/></padding>

        <Accordion prefWidth="270" minWidth="100">
            <panes>
                <TitledPane text="Textures">
                    <Text text="Placeholder text"/>
                </TitledPane>
                <TitledPane text="Images">
                    <Text text="Load image files here."/>
                </TitledPane>
            </panes>



        </Accordion>
        <TabPane fx:id="mapTabPane" prefHeight="720" prefWidth="540" minWidth="100" HBox.hgrow="ALWAYS">
            <!--
            <Tab>
                <ScrollPane >
                    <Pane fx:id="mapPane"/>
                </ScrollPane>
            </Tab>
            -->
        </TabPane>


        <VBox fx:id="rightPane" prefWidth="270" minWidth="100" disable="true">

            <ListView fx:id="layersListView"
                      onMouseClicked="#changeLayer"/>

            <HBox alignment="CENTER">
                <Button id="addlayer" text="New Layer"
                        onAction="#addLayer">
                </Button>
                <Button id="shiftlayerup" text="↑"
                        onAction="#shiftLayerUp">
                </Button    >
                <Button id="shiftlayerdown" text="↓"
                        onAction="#shiftLayerDown">
                </Button>
                <Button id="deletelayer" text="Delete Layer"
                        onAction="#deleteLayer">
                </Button>
            </HBox>
            <!--
            <ColorPicker  fx:id="colorPicker" onAction="#changeColor">
                <value>
                    <Color/> --><!--Without this the default color is white-->
                <!--</value>
            </ColorPicker>
            -->
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <Tab text="Other">
                    <Button text="Apply Clipping" onAction="#applyClipping"/>
                </Tab>
            </TabPane>

        </VBox>

    </HBox>

    <stylesheets>
        <URL value="@UI.css" />
    </stylesheets>

</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="mapeditor.layerlist.fxmlcell.LayerListCellFXML"
          prefHeight="400.0" prefWidth="600.0"
          alignment="CENTER_LEFT" vgap="5" hgap="3">
    <padding><Insets top="2" right="2" bottom="2" left="2"/></padding>
    <children>
        <ToggleButton GridPane.rowIndex="0" GridPane.columnIndex="0"
                      text="V" fx:id="visibleToggle" selected="true"/>
        <ToggleButton GridPane.rowIndex="1" GridPane.columnIndex="0"
                      text="S" fx:id="shadowsToggle"/>
        <ImageView GridPane.rowIndex="0" GridPane.columnIndex="1"
                   fx:id="textureThumbnail"/>
        <Label GridPane.rowIndex="0" GridPane.columnIndex="2"
               fx:id="layerNameLabel" text="New Layer"/>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="2"
               fx:id="opacityLabel" text="100%"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="3"
                fx:id="optionsButton" text="O" GridPane.halignment="RIGHT"/>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
</GridPane>
